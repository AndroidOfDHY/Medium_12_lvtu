<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/six_public_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/view_error_layout_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/view_error_layout_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/view_error_layout_textview1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10.0sp"
        android:layout_marginBottom="26.0dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/view_error_layout_refresh_btn"
        android:layout_width="wrap_content"
        android:layout_height="44.0dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4.0dip"
        android:background="@drawable/six_public_buttn_bg"
        android:drawablePadding="8.0dip"
        android:gravity="center"
        android:paddingLeft="40.0dip"
        android:paddingRight="40.0dip"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>